<Inicial>
	despesa: despesa
	receita: receita
	despese: despese
	receite: receite
	saldo: saldo
	BoxLayout:
		canvas.before:
            Color:
                rgba: (0.6, 1, 0.6, 1)
			Rectangle:
                pos: self.pos
                size: self.size
		orientation: 'vertical'
		padding: 30
		spacing: 5

		Label:
			font_size: 30
			font_name: "okine.otf"
			text: "Seu saldo:"
			color: "#2E8B57"
			markup: True
		Label:
			font_size: 20
			font_name: "okine.otf"
			text: "0"
			id: saldo
			color: "#2E8B57"
			markup: True

		BoxLayout:
			orientation: 'horizontal'
			Label:
				font_size: 20
				font_name: "okine.otf"
				text: "Sua receita:"
				color: "#2E8B57"
				markup: True
			Label:
				font_size: 20
				font_name: "okine.otf"
				text: "0"
				id: receite
				color: "#2E8B57"
				markup: True
			Label:
				font_size: 20
				font_name: "okine.otf"
				text: "Sua despesa:"
				color: "#2E8B57"
				markup: True
			Label:
				font_size: 20
				font_name: "okine.otf"
				text: "0"
				id: despese
				color: "#2E8B57"
				markup: True

		BoxLayout:
			orientation: 'vertical'
			Label:
				size_hint: 1, None
				height: dp(50)
				font_size: 20
				font_name: "okine.otf"
				text: "Adicionar receita:"
				color: "#2E8B57"
				markup: True
			TextInput:
				size_hint: 1, None
				width: dp(200)
				height: dp(50)
				pos_hint: {"center_x": .5}
				id: receita
			Label:
				size_hint: 1, None
				height: dp(50)
				font_size: 20
				font_name: "okine.otf"
				text: "Adicionar Despesa:"
				color: "#2E8B57"
				markup: True
			TextInput:
				size_hint: 1, None
				width: dp(200)
				height: dp(50)
				pos_hint: {"center_x": .5}
				id: despesa

		BoxLayout:
			orientation: 'horizontal'
			Button:
				background_color:(0.1, 0.5, 0.3, 1)
				background: (0.1, 0.5, 0.3, 1)
				font_size: 18
				font_name: "okine.otf"
				text: 'Atualizar saldo'
				size_hint: 1, None
				width: dp(180)
				height: dp(50)
				pos_hint: {"center_x": .5}
				on_press: root.clicou1()
				
			Button:
				background_color:(0.1, 0.5, 0.3, 1)
				background: (0.1, 0.5, 0.3, 1)
				font_size: 18
				font_name: "okine.otf"
				text: 'Dicas'
				size_hint: 1, None
				width: dp(180)
				height: dp(50)
				pos_hint: {"center_x": .5}
				on_press: 
					root.manager.current = 'Dicas'

			Button:
				background_color:(0.1, 0.5, 0.3, 1)
				background: (0.1, 0.5, 0.3, 1)
				font_size: 15
				font_name: "okine.otf"
				text: "Relat√≥rios"
				size_hint: 1, None
				height: dp(50)
				on_press: 
					root.manager.current = 'Grafico'	
			Button:
				background_color:(0.1, 0.5, 0.3, 1)
				background: (0.1, 0.5, 0.3, 1)
				font_size: 15
				font_name: "okine.otf"
				text: "Investimentos"
				size_hint: 1, None
				height: dp(50)
				on_press: 
					root.manager.current = 'Invest'