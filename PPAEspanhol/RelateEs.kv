<Relate>
    BoxLayout:
        canvas.before:
            Color:
                rgba: (0.6, 1, 0.6, 1)
            Rectangle:
                pos: self.pos
                size: self.size

        orientation: 'vertical'
        padding: 40
        spacing: 15

        Label:
            font_size: 30
            font_name: "okine.otf"
            text: "Relatório"
                    
        BoxLayout:
            Button:
                background_color:(0.1, 0.5, 0.3, 1)
                background: (0.1, 0.5, 0.3, 1)
                font_size: 15
                width: dp(180)
                height: dp(50)
                font_name: "okine.otf"
                text: "Tela Inicial"
                size_hint: 1, None
				height: dp(50)
                on_press: 
                    root.manager.current = 'Telainicial'

            Button:
                background_color:(0.1, 0.5, 0.3, 1)
                background: (0.1, 0.5, 0.3, 1)
                font_size: 15
                width: dp(180)
                height: dp(50)
                font_name: "okine.otf"
                text: "Visualizar gráficos"
                size_hint: 1, None
				height: dp(50)
                on_press:
                    root.manager.current = 'Grafico'
