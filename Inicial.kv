<Inicial>
	despesa: despesa
	receita: receita
	despese: despese
	receite: receite
	saldo: saldo
	BoxLayout:
		canvas.before:
            Color:
                rgba: 255, 255, 255, 255
			Rectangle:
                pos: self.pos
                size: self.size
		orientation: 'vertical'
		padding: 40
		spacing: 15

		Label:
			font_size: 30
			font_name: "heavy.otf"
			text: "Seu saldo:"
			color: [0,255,255,0.5]
			markup: True
		Label:
			font_size: 20
			font_name: "heavy.otf"
			text: "0"
			id: saldo
			color: [0,255,255,0.5]
			markup: True

		BoxLayout:
			orientation: 'horizontal'
			Label:
				font_size: 20
				font_name: "heavy.otf"
				text: "Sua receita:"
				color: [0,255,255,0.5]
				markup: True
			Label:
				font_size: 20
				font_name: "heavy.otf"
				text: "0"
				id: receite
				color: [0,255,255,0.5]
				markup: True
			Label:
				font_size: 20
				font_name: "heavy.otf"
				text: "Sua despesa:"
				color: [0,255,255,0.5]
				markup: True
			Label:
				font_size: 20
				font_name: "heavy.otf"
				text: "0"
				id: despese
				color: [0,255,255,0.5]
				markup: True

		BoxLayout:
			orientation: 'horizontal'
			Label:
				size_hint: 1, None
				height: dp(50)
				font_size: 20
				font_name: "heavy.otf"
				text: "Adicionar receita:"
				color: [0,255,255,0.5]
				markup: True
			TextInput:
				size_hint: 1, None
				width: dp(200)
				height: dp(50)
				pos_hint: {"center_x": .5}
				id: receita
			Label:
				size_hint: 1, None
				height: dp(50)
				font_size: 20
				font_name: "heavy.otf"
				text: "Adicionar Despesa:"
				color: [0,255,255,0.5]
				markup: True
			TextInput:
				size_hint: 1, None
				width: dp(200)
				height: dp(50)
				pos_hint: {"center_x": .5}
				id: despesa

		BoxLayout:
			orientation: 'horizontal'
			Button:
				background_color:(0.3, 0.8, 1, 1)
				background: (0.3, 0.8, 1, 1)
				font_size: 18
				font_name: "heavy.otf"
				text: 'Atualizar saldo'
				size_hint: 1, None
				width: dp(180)
				height: dp(50)
				pos_hint: {"center_x": .5}
				on_press: root.clicou1()
				
			Button:
				background_color:(0.3, 0.8, 1, 1)
				background: (0.3, 0.8, 1, 1)
				font_size: 18
				font_name: "heavy.otf"
				text: 'Dicas'
				size_hint: 1, None
				width: dp(180)
				height: dp(50)
				pos_hint: {"center_x": .5}
				on_press: 
					root.manager.current = 'Dicas'

		BoxLayout:
			orientation: 'horizontal'
			Button:
				background_color:(0.3, 0.8, 1, 1)
				background: (0.3, 0.8, 1, 1)
				font_size: 15
				font_name: "heavy.otf"
				text: "Simulações"
				on_press: 
					root.manager.current = 'Simule'
			Button:
				background_color:(0.3, 0.8, 1, 1)
				background: (0.3, 0.8, 1, 1)
				font_size: 15
				font_name: "heavy.otf"
				text: "Relatórios"
				on_press: 
					root.manager.current = 'Relate'
			Button:
				background_color:(0.3, 0.8, 1, 1)
				background: (0.3, 0.8, 1, 1)
				font_size: 15
				font_name: "heavy.otf"
				text: "Objetivo"
				on_press: 
					root.manager.current = 'Objetivo'
			Button:
				background_color:(0.3, 0.8, 1, 1)
				background: (0.3, 0.8, 1, 1)
				font_size: 15
				font_name: "heavy.otf"
				text: "Investimentos"
				on_press: 
					root.manager.current = 'Invest'